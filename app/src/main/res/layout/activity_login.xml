<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/login_photo"
                android:layout_alignParentStart="true"
                android:id="@+id/loginPhoto"
                android:layout_alignParentTop="true"
                android:scaleType="fitCenter"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/loginPhoto"
                android:id="@+id/login_email"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:padding="4dp"
                android:drawableStart="@drawable/email"
                android:background="@drawable/inputs"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_email"
                android:id="@+id/login_pswrd"
                android:hint="Password"
                android:inputType="textPassword"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:padding="4dp"
                android:drawableStart="@drawable/password"
                android:background="@drawable/inputs"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_pswrd"
                android:id="@+id/Forget_pswrd"
                android:text="Forget Password?"
                 android:textAlignment="textEnd"
                android:layout_centerHorizontal="true"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="17dp"

                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Forget_pswrd"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:padding="4dp"   android:textStyle="bold"
                android:id="@+id/login_btn"
                android:text="Login"
                android:textColor="#fff"
                android:background="@drawable/buttons"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_btn"
                android:id="@+id/need_new_acnt"
                android:text="Need New Account ?"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="6dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="17dp"

                /> <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/need_new_acnt"
            android:id="@+id/login_using"
            android:text="or login using your "
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:textSize="17sp"

            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginRight="17dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_using"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:padding="4dp"   android:textStyle="bold"
                android:id="@+id/login_using_mobile"
                android:text="Phone"
                android:drawableStart="@drawable/phone"
                android:textColor="#fff"
                android:background="@drawable/buttons"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>