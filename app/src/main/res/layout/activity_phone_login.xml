<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneLoginActivity">

    <EditText
        android:id="@+id/writePhone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"

        android:layout_marginStart="17dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/inputs"
        android:drawableStart="@drawable/phone"
        android:hint="Enter your phone number.."
        android:inputType="number|text"
        android:padding="8dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:inputType="number"
        android:visibility="invisible"
        android:background="@drawable/inputs"
        android:hint="Enter Verification code here.."
        android:drawableStart="@drawable/password"
        android:layout_marginStart="17dp"
        android:layout_below="@id/writePhone_number"
        android:layout_marginEnd="17dp"
        android:layout_alignParentStart="true"
        android:textSize="16sp"
        android:textAlignment="center"
     android:textStyle="bold"
        android:padding="5dp"
        android:id="@+id/verification_code"
        android:textAllCaps="false"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/send_code_btn"
        android:text="Send verification code"
        android:background="@drawable/buttons"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_below="@id/verification_code"
        android:layout_marginTop="2dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/verify_btn"
        android:text="Verify"
        android:visibility="invisible"
        android:background="@drawable/buttons"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_below="@id/send_code_btn"

        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"/>

</RelativeLayout>